{
  "name": "jscad",
  "displayName": "jscad",
  "description": "JSCAD preview",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.64.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onCommand:jscad.openPreview",
    "onWebviewPanel:jscad"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configurationDefaults": {},
    "configuration": {
      "type": "object",
      "title": "JSCAD",
      "properties": {
        "jscad.defaultFaceColor": {
          "type": "object",
          "default": {
            "r": 1,
            "g": 0.3,
            "b": 0.65,
            "a": 1
          },
          "description": "Default color of 3D objects in the editor (expects object with r/g/b/a properties)."
        }
      }
    },
    "commands": [
      {
        "command": "jscad.openPreview",
        "title": "Preview JSCAD",
        "category": "JSCAD"
      },
      {
        "command": "jscad.exportAsSTL",
        "title": "Export JSCAD as STL",
        "category": "JSCAD"
      },
      {
        "command": "jscad.importPathFromSVG",
        "title": "Import path from SVG file",
        "category": "JSCAD"
      }
    ],
    "languages": [
      {
        "id": "javascript",
        "extensions": [
          ".jscad"
        ]
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .jscad",
          "command": "jscad.openPreview",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .jscad",
          "command": "jscad.exportAsSTL",
          "group": "export"
        }
      ]
    },
    "keybindings": [
      {
        "command": "jscad.openPreview",
        "key": "shift+ctrl+v",
        "mac": "shift+cmd+v",
        "when": "resourceExtname == .jscad"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@jscad/cli": "^2.2.13",
    "debounce": "^1.2.1",
    "svg-parser": "^2.0.4"
  },
  "devDependencies": {
    "@types/debounce": "^1.2.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/svg-parser": "^2.0.3",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^2.0.3",
    "eslint": "^8.6.0",
    "glob": "^7.2.0",
    "mocha": "^9.1.3",
    "typescript": "^4.5.4"
  }
}
